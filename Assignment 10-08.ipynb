   "source": [
    "word = input(\"Please enter your sentence:\")\n",
    "def Letters_Count(word):\n",
    "    dict = {}\n",
    "    for n in word:\n",
    "        keys = dict.keys()\n",
    "        if n in keys:\n",
    "            dict[n] += 1\n",
    "        else:\n",
    "            dict[n] = 1\n",
    "    return dict\n",
    "print(Letters_Count(word))"
   ]
  }
